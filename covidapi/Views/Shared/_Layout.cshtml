<!DOCTYPE html>
<html lang="en" xmlns:og="http://ogp.me/ns#">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Covid Tracker</title>
    @RenderSection("Metas", required: false)
    <meta property="og:title" content="Covid Tracker, last stat, news, maps about coronavirus" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="@Context.Request.Scheme://@Context.Request.Host@Context.Request.Path" />
    <meta property="og:image" content="@Context.Request.Scheme://@Context.Request.Host/images/map.png" />
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-reboot.css" />
        <link rel="stylesheet" href="~/lib/datatables/css/dataTables.bootstrap4.css" />
        <link rel="stylesheet" href="~/lib/leaflet/leaflet.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment include="Staging,Production">
        <link rel="stylesheet" asp-append-version="true" href="~/css/site.min.css" />
    </environment>
    <script src="https://kit.fontawesome.com/505b534c1d.js" crossorigin="anonymous"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-1">
            <div class="container-fluid">
                <a class="navbar-brand text-white" style="display: flex;flex-direction: row;align-items: center;" asp-area="" asp-controller="Home" asp-action="Index">
                    <img width="25" height="25" src="/images/logo.png" />
                    <span style="margin-left:5px">Covid Tracker</span>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-signal"></i>
                                Stat
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Map">
                                <i class="fas fa-map-marked-alt"></i>
                                Map
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="News">
                                <i class="far fa-newspaper"></i>
                                News
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Around">
                                <i class="fas fa-globe-africa"></i>
                                Around
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Infos">
                                <i class="fas fa-info-circle"></i>
                                Infos
                            </a>
                        </li>


                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Admin" asp-action="Upload">Upload</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="News" asp-action="Index">News</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Serie" asp-action="Index">Serie</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Logs" asp-action="Index">Logs</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            <div style="display:flex;flex-direction:row;justify-content:center;margin-bottom:5px;">
                @*<iframe src="//rcm-na.amazon-adsystem.com/e/cm?o=1&p=48&l=ez&f=ifr&linkID=abce4867d43c99a2eba3de4ac2c2bd34&t=covid1903f-20&tracking_id=covid1903f-20" width="728" height="90" scrolling="no" border="0" marginwidth="0" style="border:none;" frameborder="0"></iframe>*@
                <iframe src="https://rcm-eu.amazon-adsystem.com/e/cm?o=8&p=288&l=ez&f=ifr&linkID=5f91ffb3a3cafdc0e227a8cb840af9d2&t=covid1902a-21&tracking_id=covid1902a-21" width="320" height="50" scrolling="no" border="0" marginwidth="0" style="border:none;" frameborder="0"></iframe>
            </div>
            @RenderBody()
        </main>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    We use cookies to personalize the content and functionality of our site. By continuing to browse, you accept their use.
                </div>
                <div class="modal-footer">
                    <button type="button" onclick="accept()" class="btn btn-primary">Accept</button>
                </div>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-white">
        <div class="container-fluid text-white">
            &copy; 2020 - covid news - <a asp-area="" class="text-white" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    @*<script data-ad-client="ca-pub-8922467293626973" async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>*@
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-159589459-1"></script>
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
        <script src="~/lib/datatables/js/dataTables.bootstrap4.js"></script>
        <script src="~/lib/leaflet/leaflet.js"></script>
        <script asp-append-version="true" src="~/js/site.js"></script>
    </environment>
    <environment include="Staging,Production">
        <script asp-append-version="true" src="~/js/site.min.js"></script>
    </environment>
    <script type="text/javascript">
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());
        gtag('config', 'UA-159589459-1');</script>
    @RenderSection("Scripts", required: false)
</body>
</html>
